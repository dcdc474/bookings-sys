http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd
http://www.mulesoft.org/schema/mule/api-gateway http://www.mulesoft.org/schema/mule/api-gateway/current/mule-api-gateway.xsd">
	<db:config name="Database_Config" doc:name="Database Config" doc:id="2eb8d052-02be-40de-8e1c-4c7524a266b8" >
		<db:my-sql-connection host="${db.host}" port="${db.port}" user="${db.user}" password="${db.password}" database="${db.database}" />
	</db:config>
	<configuration-properties doc:name="Configuration properties" doc:id="6720eeec-3807-4681-89ca-9d455e431c8c" file="config.yaml" />
	<http:listener-config name="HTTP_Listener_config" doc:name="HTTP Listener config" doc:id="bf3edb67-cdee-4399-b323-8e887d6deeb9" >
		<http:listener-connection host="0.0.0.0" port="8081" />
	</http:listener-config>
	<api-gateway:autodiscovery apiId="${autodiscover.apiId}" ignoreBasePath="true" doc:name="API Autodiscovery" doc:id="a6d7f0e3-3975-46f6-acac-b1e221542b6c" flowRef="${autodiscover.flow}" />
</mule>
